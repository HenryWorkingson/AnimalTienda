                @Html.DisplayFor(modelItem => item.Nombre_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cuenta_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo_Cliente)
            </td>
            <td>
                @Html.ActionLink("Details", "Tarjetas", new { id = item.id_Cliente }, new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeleteCliente", new { id = item.id_Cliente }, new
                {
