@model IEnumerable<Animal.Cliente>

@{
    ViewData["Title"] = "Cliente";
}

<h1>Cliente</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_Cliente)
